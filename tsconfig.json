{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": [
			"es6"
		],
		"strict": true,
		"allowJs": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts",
		"config/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}